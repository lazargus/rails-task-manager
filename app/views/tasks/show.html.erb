<h1><%= @task.title %></h1>

<div class="details">
  <p><%= @task.details %></p>
</div>


<div class="completed">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <p>This task is completed</p>
  <% else %>
    <i class="far fa-square"></i>
    <p>This task is completed</p>
  <% end %>
</div>

<%= link_to 'Back to list', tasks_path  %>
