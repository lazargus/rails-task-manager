<div class="top">
  <h1><%= @task.title %></h1>
  <%= link_to 'Edit the task', edit_task_path(@task), id: "btn-edit"  %>
</div>

<div class="details">
  <p><%= @task.details %></p>
</div>


<div class="completed">
  <% if @task.completed %>
    <i class="far fa-check-square"></i>
    <p>This task is completed</p>
  <% else %>
    <i class="far fa-square"></i>
    <p>This task is not completed</p>
  <% end %>
</div>

<hr>

<%= link_to 'Back to list', tasks_path  %>
